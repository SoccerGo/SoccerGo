<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context="heracles.soccergo.race.JoinRaceActivity">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="#33a333">

        <ImageView
            android:id="@+id/iv_holdRace_back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="2dp"
            android:src="@drawable/back_icon_left"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="加入比赛"
            android:textColor="#ffffff"
            android:textSize="16dp"
            android:textStyle="bold"/>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/linearLayout5"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/relativeLayout"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnUnjoined"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="@color/LightWhiteGreen"
            android:text="未加入"/>

        <LinearLayout
            android:layout_width="3dp"
            android:layout_height="match_parent"
            android:background="@color/LightWhiteGreen"/>

        <Button
            android:id="@+id/btnJoined"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="@color/material_grey_100"
            android:text="已加入"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutJoin"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/linearLayout5"
        android:layout_marginBottom="40dp"
        android:orientation="horizontal">

    </LinearLayout>

    <Button
        android:id="@+id/btnHoldRace"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="#33a333"
        android:text="没有中意的比赛？试试发起一场自己的比赛"
        android:textColor="#ffffff"
        android:textSize="14dp"/>

</RelativeLayout>
